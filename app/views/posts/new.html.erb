<h1>New Post</h1>

<div>
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, id: "post_title" %><br>
    <br>
    <%= f.label :body %>
    <%= f.text_area :body, id: "post_body" %><br>
    <br>
    <%= f.text_field :tags, id: "post_tags" %><br>
    <br>
    <%= f.submit "Submit Post" %>
  <% end %>
</div>
